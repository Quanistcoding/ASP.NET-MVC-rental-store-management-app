@model Rental_Store_Management.Models.Rental

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerDriverLicenseNumber" class="control-label"></label>
                <input asp-for="CustomerDriverLicenseNumber" class="form-control" />
                <span asp-validation-for="CustomerDriverLicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" class ="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateRented" class="control-label"></label>
                <input asp-for="DateRented" class="form-control" value = "@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss").Replace(" ","T")"/>
                <span asp-validation-for="DateRented" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReturned" class="control-label"></label>
                <input asp-for="DateReturned" class="form-control" disabled/>
                <span asp-validation-for="DateReturned" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
