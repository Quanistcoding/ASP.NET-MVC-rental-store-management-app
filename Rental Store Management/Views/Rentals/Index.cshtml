@model IEnumerable<Rental_Store_Management.Models.Rental>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDriverLicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateRented)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateReturned)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerDriverLicenseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRented)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateReturned)
            </td>
            <td>
                    @if (item.DateReturned == null)
                    {
                       <a asp-action="Edit" asp-route-id="@item.Id">Return</a> <span>|</span>
                    }
                
                    @if (User.IsInRole("admin"))
                    {
                      <a asp-action="Details" asp-route-id="@item.Id">Details</a> <span>|</span>
                      <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>                     
                    }

            </td>
        </tr>
}
    </tbody>
</table>
